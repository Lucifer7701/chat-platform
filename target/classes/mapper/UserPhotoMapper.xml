<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 2. UserPhotoMapper.xml -->
<mapper namespace="com.dating.mapper.UserPhotoMapper">

    <resultMap id="UserPhotoResultMap" type="com.dating.entity.UserPhoto">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="photoUrl" column="photo_url"/>
        <result property="isAvatar" column="is_avatar"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_photos (user_id, photo_url, is_avatar, sort_order, status)
        VALUES (#{userId}, #{photoUrl}, #{isAvatar}, #{sortOrder}, #{status})
    </insert>

    <select id="findById" resultMap="UserPhotoResultMap">
        SELECT * FROM user_photos WHERE id = #{id} AND status = 1
    </select>

    <select id="findByUserId" resultMap="UserPhotoResultMap">
        SELECT * FROM user_photos
        WHERE user_id = #{userId} AND status = 1
        ORDER BY sort_order ASC, created_at DESC
    </select>

    <update id="clearAvatarFlag">
        UPDATE user_photos SET is_avatar = 0 WHERE user_id = #{userId}
    </update>

    <update id="setAsAvatar">
        UPDATE user_photos SET is_avatar = 1 WHERE id = #{photoId}
    </update>

    <delete id="deleteByUserId">
        DELETE FROM user_photos WHERE user_id = #{userId}
    </delete>

    <delete id="deleteById">
        DELETE FROM user_photos WHERE id = #{id}
    </delete>

    <!-- 清理孤立记录 -->
    <delete id="deleteOrphanedRecords">
        DELETE FROM user_photos
        WHERE user_id NOT IN (
            SELECT id FROM users WHERE status != 3
            )
    </delete>
</mapper>
